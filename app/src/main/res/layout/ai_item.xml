<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
       >
        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/girl" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/user_logo"
            android:layout_alignTop="@id/user_logo"
            android:layout_toRightOf="@id/user_logo">

            <TextView
                android:id="@+id/user_name"
                style="@style/TextTheme"
                android:layout_marginLeft="8dip"
                android:text="岁月抚伤" />

            <TextView
                android:id="@+id/item_public_time"
                style="@style/TextTheme"
                android:layout_below="@id/user_name"
                android:layout_marginLeft="8dip"
                android:text="12点"
                android:textColor="#888888"
                android:textSize="15dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_action_fav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/user_logo"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/user_logo"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_action_fav_normal" />

        <TextView
            android:id="@+id/content_text"
            style="@style/TextTheme"
            android:layout_below="@id/user_logo"
            android:layout_margin="4dp"
            android:text="十年之前，我不认识你 你不属于我，我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。" />

        <ImageView
            android:id="@+id/content_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="@mipmap/bg_pic_loading"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_action_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/content_image"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="4dip"
            android:drawableLeft="@mipmap/ic_action_edit"
            android:gravity="center"
            android:text="评论" />

        <TextView
            android:id="@+id/item_action_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_image"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/item_action_comment"
            android:drawableLeft="@mipmap/ic_action_share"
            android:gravity="center"
            android:text="分享"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/item_action_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_image"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/item_action_share"
            android:drawableLeft="@mipmap/ic_action_love"
            android:gravity="center"
            android:text="985赞"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/item_action_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_image"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/item_action_love"
            android:drawableLeft="@mipmap/ic_action_comment"
            android:gravity="center"
            android:text="聊聊"
            android:textColor="#888888" />
    </RelativeLayout>
</android.support.v7.widget.CardView>